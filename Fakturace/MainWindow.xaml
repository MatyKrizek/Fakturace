<Window x:Class="Fakturace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fakturace"
        mc:Ignorable="d"
        Title="Jednoduchá Fakturace" Height="491" Width="800"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="5">
            <TextBlock Text="Seznam odběratelů" FontSize="16" FontWeight="Bold" />
            <ListBox x:Name="CustomerListBox" Height="300" Margin="0,5,0,5" 
                     SelectionChanged="CustomerListBox_SelectionChanged" />
            <Button x:Name="AddCustomerButton" Content="Přidat odběratele" Margin="0,0,0,5"
                    Click="AddCustomerButton_Click" />

            <Button x:Name="DeleteCustomerButton" Content="Smazat odběratele" 
                    Click="DeleteCustomerButton_Click" IsEnabled="False" />

        </StackPanel>

        <StackPanel Grid.Column="1" Margin="5">
            <TextBlock Text="Seznam faktur" FontSize="16" FontWeight="Bold" />
            <ListBox x:Name="InvoiceListBox" Height="300" Margin="0,5,0,5" 
                     SelectionChanged="InvoiceListBox_SelectionChanged" />
            <Button x:Name="AddInvoiceButton" Content="Vytvořit novou fakturu" Margin="0,0,0,5"
                    Click="AddInvoiceButton_Click" IsEnabled="False" />
            <Button x:Name="GenerateInvoiceButton" Content="Generovat soubor (.txt)" Margin="0,0,0,5"
                    Click="GenerateInvoiceButton_Click" IsEnabled="False" />

            <Button x:Name="DeleteInvoiceButton" Content="Smazat fakturu" 
                    Click="DeleteInvoiceButton_Click" IsEnabled="False" />

        </StackPanel>
    </Grid>
</Window>